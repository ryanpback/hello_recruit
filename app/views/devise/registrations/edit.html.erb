
<div class="edit-user-form row">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-field col s6">
    <%= f.label :'First Name', :class => 'active' %><br />
    <%= f.email_field :first_name, autofocus: true %>
  </div>

  <div class="input-field col s6">
    <%= f.label :'Last Name', :class => 'active' %><br />
    <%= f.email_field :last_name, autofocus: true %>
  </div>

  <div class="input-field col s3">
    <%= f.label :'Street Address', :class => 'active' %><br />
    <%= f.email_field :street_address, autofocus: true %>
  </div>

  <div class="input-field col s3">
    <%= f.label :'City', :class => 'active' %><br />
    <%= f.email_field :city, autofocus: true %>
  </div>

  <div class="input-field col s3">
    <%= f.label :'State', :class => 'active' %><br />
    <%= f.email_field :state, autofocus: true %>
  </div>

  <div class="input-field col s3">
    <%= f.label :'Zip Code', :class => 'active' %><br />
    <%= f.email_field :zip_code, autofocus: true %>
  </div>

  <div class="input-field col s12">
    <%= f.label :'Skills', :class => 'active' %><br />
    <%= f.email_field :skills, autofocus: true %>
  </div>

  <div class="input-field col s6">
    <%= f.label :'Phone Number', :class => 'active' %><br />
    <%= f.email_field :phone_number, autofocus: true %>
  </div>

  <div class="input-field col s6">
    <%= f.label :'Phone Carrier', :class => 'active' %><br />
    <%= f.email_field :phone_carrier, autofocus: true %>
  </div>

  <div class="col s12 radio-buttons-edit-user">
    <%= f.label :'Admin?' %>
    <br>
    <%= f.radio_button :admin, true %>
    <%= f.label :admin_true, 'Yes' %>
    <%= f.radio_button :admin, false %>
    <%= f.label :admin_false, 'No' %>
  </div>

  <div class="input-field col s4">
    <%= f.label :email, :class => 'active' %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="input-field col s4">
    <%= f.label :"Password (6 characters minimum - leave blank if you don't want to change it)", :class => 'active' %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="input-field col s4">
    <%= f.label :password_confirmation, :class => 'active' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="input-field col s12">
    <%= f.label :"Current Password - Needed to save changes", :class => 'active' %><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class => 'btn' %>
  </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
