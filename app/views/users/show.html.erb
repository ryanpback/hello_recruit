<div class="profile">
  <div class="card profile-card">
    <div class="row">
      <div class="col s10 offset-s1">
        <h4 class="card-title center"><%= @user.first_name %> <%= @user.last_name %></h4>
        <p class="user-email left-align">Email: <%= @user.email %></p>
        <p class="user-phone_number left-align">Phone number: <%= @user.phone_number %></p>
        <p class="user-street_address left-align">Street Address: <%= @user.street_address %></p>
        <p class="user-city-state left-align">City/State: <%= @user.city %>, <%= @user.state %></p>
        <p class="user-zip_code left-align">Zip Code: <%= @user.zip_code %></p>
        <p class="user-skills left-align">Listed Skills: <%= @user.skills %></p>
        <%= link_to 'Resume', @user.resume.url, target: '_blank', :class => 'doc-links' %>
        <%= link_to 'Cover Letter', @user.cover_letter.url, target: '_blank', :class => 'doc-links' %>
      </div>
    </div>
  </div>

