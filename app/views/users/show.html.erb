<div class="row">
  <div class="col s8 offset-s2">
    <div class="card profile-card">
      <span class="card-title center"><%= @user.first_name %> <%= @user.last_name %></span>
      <p class="user-email">Email: <%= @user.email %></p>
      <p class="user-phone_number">Phone number: <%= @user.phone_number %></p>
      <p class="user-street_address">Street Address: <%= @user.street_address %></p>
      <p class="user-city-state">City/State: <%= @user.city %>, <%= @user.state %></p>
      <p class="user-zip_code">Zip Code: <%= @user.zip_code %></p>
      <p class="user-skills">Listed Skills: <%= @user.skills %></p>
    </div>
  </div>
</div>

<% if !@user.jobs.any? %>
  <h2 class="center no-applies">You have not applied for any jobs.</h2>
<% else %>
<div class="row">
  <div class="col s8 offset-s2 user-table">
    <h2 class="center applies">Jobs Applied For</h2>
    <table class="table striped bordered">
      <thead>
        <tr>
          <th>Job Title</th>
          <th>Location</th>
          <th>Job Type</th>
          <th>Compensation</th>
        </tr>
      </thead>
      <tbody>
        <% @user.jobs.each do |job|%>
        <tr data-link='<%= job_path(job) %>'>
          <td><%= job.title %></td>
          <td><%= job.location %></td>
          <td><%= job.job_type %></td>
          <td><%= job.compensation %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>
